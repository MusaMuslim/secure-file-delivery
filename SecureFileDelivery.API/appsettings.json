{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=securefiledelivery.db"
  },
  "FileStorage": {
    "RootPath": "FileStorage",
    "MaxFileSizeBytes": 52428800,
    "AllowedExtensions": [ ".pdf", ".csv", ".xlsx" ]
  },
  "Security": {
    "EncryptionKey": "ThisIsASecure32CharacterKeyForDemo!",
    "JwtSecret": "ThisIsASecretKeyForJWTTokenGeneration2024!",
    "JwtIssuer": "SecureFileDelivery.API",
    "JwtAudience": "SecureFileDelivery.Client",
    "JwtExpirationMinutes": 60
  },
  "DownloadLinks": {
    "DefaultExpirationMinutes": 60,
    "MaxExpirationMinutes": 1440
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*"
}